---
title: Коммитет
---
extends shared/_layout
block content
  
  // HERO TITLE
  .hero-title(js-header-color data-menu-color="white" data-logo-color="white")
    .container
      .hero-title__content
        h1.h1-title.rtxt(js-reveal data-type="onload")
          span.rtxt__wrap
            span.rtxt__mover Оргкомитет
        
    .hero-title__cover(style="background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_64,c_fill,e_blur:600/v1549746979/runet25/heroTitle_8_blue.jpg)")
      img(js-lazy data-src='img/backgrounds/heroTitle_8_blue.jpg' data-srcset='img/backgrounds/heroTitle_8_blue@2x.jpg 2x')
  
  // grid
  .grid.grid-main
    .col.col--8
      // card-collection
      .card-collection
        .card-collection__grid
          mixin newsCard(id, name, post, img)
            // card
            a(href="#cardCommite-"+id js-popup).card.card--large.card--event
              .scaler.img-block(data-ar="1:1" style='background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_64,c_fill,e_blur:600/v1549746979/runet25/'+ img +'.jpg)')
                img(js-lazy data-src='img/'+ img +'.jpg' data-srcset='img/'+ img +'@2x.jpg 2x')

              p.card__name.h4-title.rtxt(js-reveal js-set-line-breaks)= name
              span.card__post.p-small.rtxt(js-reveal js-set-line-breaks)= post

              // modal
              .mfp-dialog.mfp-committee.mfp-hide(id="cardCommite-"+id)
                p.p-main.card__date День рождения 8 апреля
                img.img-block(js-lazy data-src='img/'+ img +'.jpg' data-srcset='img/'+ img +'@2x.jpg 2x')
                p.card__name.h2-title= name
                p.p-main Общественный деятель, эксперт российской интернет-отрасли. Директор Российской ассоциации электронных коммуникаций, член правления Регионального общественного центра интернет-технологий. Входит в состав Общественного совета и IT-совета при Минкомсвязи России.
          
          +newsCard(0, "Плуготаренко Сергей", "Директор РАЭК", "committeeCard_1")
          +newsCard(1, "Гребенников Сергей", "Директор РОЦИТ", "committeeCard_2")
          
          +newsCard(2, "Дёмкина Екатерина", "Руководитель пресс-службы РАЭК", "committeeCard_3")
          +newsCard(3, "Захаревская Мария", "Директор Friends Events", "committeeCard_4")

    .col.col--4
      // tile
      .tile.tile--full.tile--fixed(js-tile-fixed)
        .tile__img-cover(style="background-image: url(https://res.cloudinary.com/dqruxbmfq/image/upload/w_128,c_fill,e_blur:600/v1549746979/runet25/candyFire_6.jpg)")
          img(js-lazy data-src='img/candyFire_6.jpg' data-srcset='img/candyFire_6@2x.jpg 2x')
